# Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# OpenAI Configuration (Required for AI Agent)
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key-here
AGENT_MODEL_NAME=gpt-4-turbo-preview
AGENT_TEMPERATURE=0.7
AGENT_MAX_TOKENS=1000
AGENT_TIMEOUT_SECONDS=30

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/todo_db
DATABASE_POOL_SIZE=20
DATABASE_POOL_TIMEOUT=30

# ============================================
# JWT Authentication
# ============================================
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# Agent Settings
# ============================================
# Set to true to use stub AI instead of OpenAI (useful for testing)
USE_STUB_AGENT=false

# Rate limiting
RATE_LIMIT_MAX_REQUESTS=30
RATE_LIMIT_WINDOW_MINUTES=1

# Message and conversation limits
MAX_MESSAGE_LENGTH=10000
MAX_CONVERSATION_HISTORY=50
CONVERSATION_AUTO_EXPIRY_HOURS=24

# ============================================
# MCP Server Settings (Future Enhancement)
# ============================================
MCP_SERVER_ENABLED=true
MCP_SERVER_URL=http://localhost:8080
MCP_CLIENT_TIMEOUT=10

# ============================================
# Security Settings
# ============================================
ENABLE_INPUT_SANITIZATION=true
ENABLE_OUTPUT_FILTERING=true
BLOCK_SUSPICIOUS_CONTENT=true

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_FILE_PATH=logs/agent.log

# ============================================
# Caching Settings (Future Enhancement)
# ============================================
ENABLE_AGENT_CACHE=false
CACHE_TTL_SECONDS=300

# ============================================
# Error Handling
# ============================================
ENABLE_DETAILED_ERROR_MESSAGES=false
ERROR_RESPONSE_TEMPLATE=An error occurred while processing your request.

# ============================================
# Environment
# ============================================
ENVIRONMENT=development  # development | staging | production
